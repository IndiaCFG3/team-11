<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Compare Countries</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/compare/ans" method="get">
                <div class="form-group">
                    <select class="form-control" name="country1">
                        <option value="volvo">Volvo</option>
                        <option value="saab">Saab</option>
                        <option value="mercedes">Mercedes</option>
                        <option value="audi">Audi</option>
                      </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
